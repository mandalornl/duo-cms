{% block duo_privacy_widget %}
	<div class="custom-control custom-checkbox">
		<input type="checkbox" id="{{ id }}" name="{{ full_name }}" class="custom-control-input" value="1"{% if required %} required{% endif %}{% if data is same as(true) %} checked{% endif %}>
		<label class="custom-control-label required" for="{{ id }}">
			{{- label }}
			{% if page -%}
				(<a href="{{ path('_url', { url: page.url, _locale: app.request.locale }) }}" target="_blank">
					{{- 'duo_form.privacy.view' | trans -}}
				</a>)
			{%- endif -%}
		</label>
	</div>
{% endblock %}

{% block duo_recaptcha_widget %}
	{{ form_widget(form) }}
	{% if autoHideBadge %}
		<p><small>This site is protected by reCAPTCHA and the Google <a href="https://policies.google.com/privacy" target="_blank">Privacy Policy</a> and <a href="https://policies.google.com/terms" target="_blank">Terms of Service</a> apply.</small></p>
	{% endif %}
{% endblock %}
