{% extends '@DuoAdmin/Mail/layout.mjml.twig' %}

{% macro submission(data) %}
	{% for label, value in data %}
		â€¢ {{ label }}: {{ value }}
	{% endfor %}
{% endmacro %}

{% block subject %}
	{{- brand_name }} - {{ 'duo.form.mail.form_submission.subject' | trans({ '%form_name%': submission.name }, 'emails') -}}
{% endblock %}

{% block body_text %}
	{% import _self as self %}
	{% autoescape false %}
		{{ 'duo.form.mail.form_submission.message' | trans({
			'%submission%': self.submission(submission.data) | trim,
			'%url%': url('duo_form_listing_submission_update', { id: submission.id })
		}, 'emails') }}

		{{ parent() }}
	{% endautoescape %}
{% endblock %}

{% block content %}
	{% import _self as self %}
	<mj-text>
		<h3>
			{{- 'duo.form.mail.form_submission.subject' | trans({
				'%form_name%': submission.name
			}, 'emails') -}}
		</h3>
		<p>

			{{- 'duo.form.mail.form_submission.message' | trans({
				'%submission%': self.submission(submission.data) | trim,
				'%url%': url('duo_form_listing_submission_update', { id: submission.id })
			}, 'emails') | nl2br -}}
		</p>
	</mj-text>
{% endblock %}