{% spaceless %}
<div id="modal_iframe_{{ type }}" class="modal fade modal-iframe" tabindex="-1" role="dialog" aria-hidden="true" aria-labelledby="modal_iframe_{{ type }}_title">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="modal_iframe_{{ type }}_title">
					{{- ('duo.' ~ type ~ '.modal.title') | trans -}}
				</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="{{ 'duo.admin.modal.global.close' | trans }}">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<iframe src="{{ path(routePrefix ~ '_index', app.request.query.all | merge ({ iframe: true })) }}" scrolling="auto" frameborder="0" width="100%" height="100%"></iframe>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">
					{{- 'duo.admin.modal.global.close' | trans -}}
				</button>
			</div>
		</div>
	</div>
</div>
{% endspaceless %}