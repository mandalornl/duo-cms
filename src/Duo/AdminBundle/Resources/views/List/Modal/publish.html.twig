<div id="modal_{{ type }}_publish_{{ entity.id }}" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" aria-labelledby="modal_{{ type }}_publish_label">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="modal_{{ type }}_publish_label">
					{{- 'duo.modal.publish.title' | trans -}}
				</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="{{ 'duo.modal.global.close' | trans }}">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<p>Lorem ipsum dolor sit amet...</p>
				<form action="javascript:;">
					<div class="form-group">
						<label for="modal_publish_date" class="sr-only">
							Publication date
						</label>
						<input type="datetime-local" id="modal_publish_date" name="date" class="form-control">
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">
					{{- 'duo.modal.global.cancel' | trans -}}
				</button>
				<button type="button" class="btn btn-primary">
					{{- 'duo.modal.global.ok' | trans -}}
				</button>
			</div>
		</div>
	</div>
</div>