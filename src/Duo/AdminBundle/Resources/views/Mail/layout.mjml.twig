{% block body_text %}
{{ brand_name }} &copy; {{ 'now' | date('Y') }}
{% endblock %}

{% block body_html %}
	{% mjml %}
		<mjml>
			<mj-head>
				<mj-title>{% block subject %}{{ brand_name }}{% endblock %}</mj-title>
				<mj-attributes>
					<mj-all font-family="Helvetica Neue, Helvetica, Arial, sans-serif" color="#333"/>
					<mj-button background-color="#007bff" color="#fff" border-radius="3px"/>
					<mj-text line-height="20px"></mj-text>
				</mj-attributes>
			</mj-head>
			<mj-body background-color="#f2f2f2">
				<mj-wrapper>
					<!-- Header -->
					<mj-section padding-bottom="0" background-color="#343a40" text-align="left">
						<mj-column width="100%">
							<mj-text font-size="20px" color="#fff">{{ brand_name }}</mj-text>

							<mj-divider padding-top="0" padding-bottom="0" padding-left="0" padding-right="0" border-width="5px" border-color="#adb5bd"/>
						</mj-column>
					</mj-section>

					<!-- Content -->
					<mj-section padding-bottom="0" background-color="#fff">
						<mj-column width="100%">
							{% block content %}{% endblock %}
						</mj-column>
					</mj-section>

					<!-- Footer -->
					<mj-section padding-bottom="0" background-color="#fff">
						<mj-column width="100%">
							<mj-divider padding-top="20" padding-bottom="0" padding-left="0" padding-right="0" border-width="5px" border-color="#6c757d"/>

							<mj-text color="grey">{{ brand_name }} &copy; {{ 'now' | date('Y') }}</mj-text>
						</mj-column>
					</mj-section>
				</mj-wrapper>
			</mj-body>
		</mjml>
	{% endmjml %}
{% endblock %}