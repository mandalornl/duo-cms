{% extends '@DuoAdmin/Mail/layout.mjml.twig' %}

{% block subject %}
	{{- brand_name }} - {{ 'duo.security.mail.forgot_password.subject' | trans({}, 'emails') -}}
{% endblock %}

{% block body_text %}
	{% autoescape false %}
		{{ 'duo.security.mail.forgot_password.body_text' | trans({
			'%url%': url('duo_security_reset_password', { token: token })
		}, 'emails') }}

		{{ parent() }}
	{% endautoescape %}
{% endblock %}

{% block content %}
	<mj-text font-family="Helvetica Neue" color="#333">
		<h3>{{ 'duo.security.mail.forgot_password.body_html.title' | trans({}, 'emails') }}</h3>
		<p>{{ 'duo.security.mail.forgot_password.body_html.use_button' | trans({}, 'emails') }}</p>
	</mj-text>

	<mj-button font-family="Helvetica Neue" background-color="#007bff" color="#fff" href="{{ url('duo_security_reset_password', { token: token }) }}" border-radius="3px">
		{{- 'duo.security.mail.forgot_password.body_html.button' | trans({}, 'emails') -}}
	</mj-button>

	<mj-text font-family="Helvetica Neue" color="#333">
		<p>{{ 'duo.security.mail.forgot_password.body_html.copy_to_browser' | trans({}, 'emails') }}:</p>
		<p>{{ url('duo_security_reset_password', { token: token }) }}</p>
	</mj-text>
{% endblock %}